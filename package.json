{
  "name": "sorcerer",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm dev:all",
    "dev:all": "node scripts/dev-all.mjs",
    "dev:frontend": "APP_ROLE=frontend next dev -H 127.0.0.1 -p 7777",
    "dev:backend": "APP_ROLE=backend next dev -H 127.0.0.1 -p 7778",
    "build": "APP_ROLE=frontend next build",
    "build:frontend": "APP_ROLE=frontend next build",
    "build:backend": "APP_ROLE=backend next build",
    "build:all": "pnpm build:frontend && pnpm build:backend",
    "start": "APP_ROLE=frontend next start -H 127.0.0.1 -p 7777",
    "start:frontend": "APP_ROLE=frontend next start -H 127.0.0.1 -p 7777",
    "start:backend": "APP_ROLE=backend next start -H 127.0.0.1 -p 7778",
    "lint": "eslint"
  },
  "dependencies": {
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
